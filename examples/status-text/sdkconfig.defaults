CONFIG_APP_REPRODUCIBLE_BUILD=y

CONFIG_COMPILER_ASSERT_NDEBUG_EVALUATE=y
CONFIG_COMPILER_WARN_WRITE_STRINGS=y

CONFIG_ESPTOOLPY_HEADER_FLASHSIZE_UPDATE=y
CONFIG_ESP_SYSTEM_PANIC_REBOOT_DELAY_SECONDS=15
# On chips with USB serial, disable secondary console which does not make sense when using console component
CONFIG_ESP_CONSOLE_SECONDARY_NONE=y

CONFIG_LOG_COLORS=y
CONFIG_LOG_MAXIMUM_LEVEL_VERBOSE=y

CONFIG_SSD1306_FLIP=y
CONFIG_SSD1306_OPTIMIZE=n
CONFIG_SSD1306_SPLASH=2500
CONFIG_SSD1306_FONT_CUSTOM=y
CONFIG_SSD1306_FONT_CUSTOM_NAME="cabaret"
